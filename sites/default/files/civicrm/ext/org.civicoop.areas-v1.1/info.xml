<?xml version="1.0"?>
<extension key="org.civicoop.areas" type="module">
  <file>areas</file>
  <name>Area / Region</name>
  <description>This extension gives the administrator the possibility to define areas. When a contact is added to the system the contact is assigned to the areas based on his/her address. At the same time the administrator can specify for groups and events for who the group/event is relevant based on the area.</description>
  <license>AGPL-3.0</license>
  <maintainer>
    <author>Jaap Jansma</author>
    <email>jaap.jansma@civicoop.org</email>
  </maintainer>
  <urls>
    <url desc="Main Extension Page">https://lab.civicrm.org/extensions/org.civicoop.areas</url>
    <url desc="Documentation">https://lab.civicrm.org/extensions/org.civicoop.areas/README.md</url>
    <url desc="Support">http://civicoop.org</url>
    <url desc="Licensing">http://www.gnu.org/licenses/agpl-3.0.html</url>
  </urls>
  <releaseDate>2018-05-22</releaseDate>
  <version>1.1</version>
  <develStage>stable</develStage>
  <compatibility>
    <ver>4.7</ver>
  </compatibility>
  <comments>Sponsored by VELT</comments>
  <classloader>
    <psr4 prefix="Civi\" path="Civi" />
	</classloader>
  <civix>
    <namespace>CRM/Areas</namespace>
  </civix>
</extension>
